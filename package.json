{
  "name": "fastwire",
  "version": "0.1.0",
  "description": "Modern monorepo starter powered by pnpm & Syncpack. Minimal & fast",
  "scripts": {
    "prepare": "lefthook install",
    "check": "biome check ./packages/**",
    "format": "biome format ./packages/** --write",
    "lint:deps": "syncpack list-mismatches",
    "fix:deps": "syncpack fix-mismatches",
    "test": "echo \"No tests specified yet\""
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "biome",
    "lefthook",
    "syncpack",
    "workspace",
    "template",
    "starter",
    "javascript",
    "typescript",
    "devtools",
    "linting",
    "formatting"
  ],
  "author": "Jonny Gamba",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "lefthook": "^1.12.2",
    "syncpack": "^13.0.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1",
  "volta": {
    "node": "22.17.1",
    "pnpm": "10.13.1"
  }
}
